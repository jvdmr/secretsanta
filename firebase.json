{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/echo",
        "function": "echo"
      },
      {
        "source": "/secret-santa",
        "function": "secretSanta"
      },
      {
        "source": "/mail",
        "function": "mail"
      }
    ]
  }
}
